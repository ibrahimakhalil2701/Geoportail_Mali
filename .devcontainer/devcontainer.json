{
    "name": "Geoportail Mali Dev",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."              // on part du dossier parent de .devcontainer
    },
    "workspaceFolder": "/app",     // correspond à WORKDIR /app dans votre Dockerfile
  
    // Publie le port 3000 (vous verrez "Open in Browser" dans Codespaces)
    "runArgs": [
      "-p", "3000:3000"
    ],
  
    // (Optionnel) Si vous avez des variables d'env globales
    "containerEnv": {
      "DATABASE_URL": "postgres://<postgres>:<Le27012000,>@<mon-postgres.chwcc86weoq6.ca-central-1.rds.amazonaws.com>:5432/<db>"
    },
  
    // Extensions VS Code que vous voulez auto-installer
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint"
        ]
      }
    },
  
    // Commande exécutée après la création du conteneur
    "postCreateCommand": "npm install"
  }
  